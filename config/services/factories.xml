<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="sylius_refund.factory.credit_memo_sequence" class="Sylius\RefundPlugin\Factory\CreditMemoSequenceFactory" />
        <service id="Sylius\RefundPlugin\Factory\CreditMemoSequenceFactoryInterface" alias="sylius_refund.factory.credit_memo_sequence" />

        <service id="sylius_refund.factory.refund_type" class="Sylius\RefundPlugin\Factory\RefundTypeFactory">
            <argument type="string">%sylius_refund.refund_type%</argument>
        </service>
        <service id="Sylius\RefundPlugin\Factory\RefundTypeFactoryInterface" alias="sylius_refund.factory.refund_type" />

        <service id="sylius_refund.factory.line_item" class="Sylius\RefundPlugin\Factory\LineItemFactory">
            <argument type="string">%sylius_refund.model.line_item.class%</argument>
        </service>
        <service id="Sylius\RefundPlugin\Factory\LineItemFactoryInterface" alias="sylius_refund.factory.line_item" />

        <service
            id="sylius_refund.custom_factory.credit_memo"
            class="Sylius\RefundPlugin\Factory\CreditMemoFactory"
            decorates="sylius_refund.factory.credit_memo"
            decoration-priority="256"
        >
            <argument type="service" id=".inner" />
            <argument type="service" id="sylius_refund.generator.credit_memo_identifier" />
            <argument type="service" id="sylius_refund.generator.credit_memo_number" />
            <argument type="service" id="Sylius\RefundPlugin\Provider\CurrentDateTimeImmutableProviderInterface" />
        </service>

        <service
            id="sylius_refund.custom_factory.shop_billing_data"
            class="Sylius\RefundPlugin\Factory\ShopBillingDataFactory"
            decorates="sylius_refund.factory.shop_billing_data"
            decoration-priority="256"
        >
            <argument type="service" id=".inner" />
        </service>

        <service
            id="sylius_refund.custom_factory.customer_billing_data"
            class="Sylius\RefundPlugin\Factory\CustomerBillingDataFactory"
            decorates="sylius_refund.factory.customer_billing_data"
            decoration-priority="256"
        >
            <argument type="service" id=".inner" />
        </service>
    </services>
</container>
