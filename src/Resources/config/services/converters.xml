<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults autowire="false" autoconfigure="false" public="true" />

        <service
            id="sylius_refund.converter.line_items"
            class="Sylius\RefundPlugin\Converter\LineItem\CompositeLineItemConverter"
        >
            <argument type="tagged_iterator" tag="sylius_refund.line_item_converter" />
            <argument type="service" id="sylius_refund.filter.unit_refund" />
        </service>
        <service id="Sylius\RefundPlugin\Converter\LineItem\LineItemsConverterInterface" alias="sylius_refund.converter.line_items" />
        <service id="sylius_refund.converter.line_items.composite" alias="sylius_refund.converter.line_items" />

        <service
            id="sylius_refund.converter.request_to_refund_units"
            class="Sylius\RefundPlugin\Converter\Request\RequestToRefundUnitsConverter"
        >
            <argument type="tagged_iterator" tag="sylius_refund.request_to_refund_units_converter" />
        </service>
        <service id="Sylius\RefundPlugin\Converter\Request\RequestToRefundUnitsConverterInterface" alias="sylius_refund.converter.request_to_refund_units" />

        <service id="sylius_refund.converter.request_to_shipment_refund" class="Sylius\RefundPlugin\Converter\Request\RequestToShipmentRefundConverter">
            <argument type="service" id="sylius_refund.converter.refund_units" />
            <tag name="sylius_refund.request_to_refund_units_converter"/>
        </service>
        <service id="Sylius\RefundPlugin\Converter\Request\RequestToShipmentRefundConverter" alias="sylius_refund.converter.request_to_shipment_refund" />

        <service id="sylius_refund.converter.request_to_order_item_unit_refund" class="Sylius\RefundPlugin\Converter\Request\RequestToOrderItemUnitRefundConverter">
            <argument type="service" id="sylius_refund.converter.refund_units" />
            <tag name="sylius_refund.request_to_refund_units_converter"/>
        </service>
        <service id="Sylius\RefundPlugin\Converter\Request\RequestToOrderItemUnitRefundConverter" alias="sylius_refund.converter.request_to_order_item_unit_refund" />

        <service id="sylius_refund.converter.line_items.order_item_unit" class="Sylius\RefundPlugin\Converter\LineItem\OrderItemUnitLineItemsConverter">
            <argument type="service" id="sylius.repository.order_item_unit" />
            <argument type="service" id="sylius_refund.provider.tax_rate" />
            <argument type="service" id="sylius_refund.factory.line_item" />
            <tag name="sylius_refund.line_item_converter"/>
        </service>

        <service id="sylius_refund.converter.line_items.shipment" class="Sylius\RefundPlugin\Converter\LineItem\ShipmentLineItemsConverter">
            <argument type="service" id="sylius.repository.adjustment" />
            <argument type="service" id="sylius_refund.provider.tax_rate" />
            <argument type="service" id="sylius_refund.factory.line_item" />
            <tag name="sylius_refund.line_item_converter"/>
        </service>

        <service id="sylius_refund.converter.refund_units" class="Sylius\RefundPlugin\Converter\RefundUnitsConverter">
            <argument type="service" id="sylius_refund.calculator.unit_refund_total" />
        </service>
        <service id="Sylius\RefundPlugin\Converter\RefundUnitsConverterInterface" alias="sylius_refund.converter.refund_units" />
    </services>
</container>
