<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="sylius_refund.validator.refund_units_command" class="Sylius\RefundPlugin\Validator\RefundUnitsCommandValidator">
            <argument type="service" id="sylius_refund.checker.order_refunding_availability"/>
            <argument type="service" id="sylius_refund.validator.refund_amount" />
            <argument type="tagged_iterator" tag="sylius_refund.validator.unit_refunds_belonging_to_order" />
        </service>
        <service id="Sylius\RefundPlugin\Validator\RefundUnitsCommandValidatorInterface" alias="sylius_refund.validator.refund_units_command" />

        <service id="sylius_refund.validator.order_item_unit_refunds_belonging_to_order" class="Sylius\RefundPlugin\Validator\OrderItemUnitRefundsBelongingToOrderValidator">
            <argument type="service" id="sylius_refund.filter.unit_refund" />
            <argument type="service" id="sylius_refund.doctrine.orm.query.count_order_item_unit_refunds_belonging_to_order" />
            <tag name="sylius_refund.validator.unit_refunds_belonging_to_order" />
        </service>

        <service id="sylius_refund.validator.shipment_refunds_belonging_to_order" class="Sylius\RefundPlugin\Validator\ShipmentRefundsBelongingToOrderValidator">
            <argument type="service" id="sylius_refund.filter.unit_refund" />
            <argument type="service" id="sylius_refund.doctrine.orm.query.count_shipment_refunds_belonging_to_order" />
            <tag name="sylius_refund.validator.unit_refunds_belonging_to_order" />
        </service>

        <service id="sylius_refund.validator.refund_amount" class="Sylius\RefundPlugin\Validator\RefundAmountValidator">
            <argument type="service" id="sylius_refund.provider.remaining_total" />
        </service>
        <service id="Sylius\RefundPlugin\Validator\RefundAmountValidatorInterface" alias="sylius_refund.validator.refund_amount" />
    </services>
</container>
