<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <parameters>
        <parameter key="sylius_refund.supported_gateways" type="collection">
            <parameter>offline</parameter>
        </parameter>
    </parameters>

    <services>
        <defaults autowire="false" autoconfigure="false" public="true" />

        <service id="sylius_refund.provider.credit_memo_file" class="Sylius\RefundPlugin\Provider\CreditMemoFileProvider">
            <argument type="service" id="sylius_refund.generator.credit_memo_file_name" />
            <argument type="service" id="sylius_refund.manager.credit_memo_file" />
        </service>
        <service id="Sylius\RefundPlugin\Provider\CreditMemoFileProviderInterface" alias="sylius_refund.provider.credit_memo_file" />

        <service id="sylius_refund.provider.refunded_shipment_fee" class="Sylius\RefundPlugin\Provider\RefundedShipmentFeeProvider">
            <argument type="service" id="sylius.repository.adjustment" />
        </service>
        <service id="Sylius\RefundPlugin\Provider\RefundedShipmentFeeProviderInterface" alias="sylius_refund.provider.refunded_shipment_fee" />
        <service id="Sylius\RefundPlugin\Provider\RefundedShipmentFeeProvider" alias="Sylius\RefundPlugin\Provider\RefundedShipmentFeeProviderInterface">
            <deprecated package="sylius/refund-plugin" version="1.0">The "%alias_id%" service alias is deprecated and will be removed in RefundPlugin 2.0, use Sylius\RefundPlugin\Provider\RefundedShipmentFeeProviderInterface instead.</deprecated>
        </service>

        <service id="sylius_refund.provider.order_refunded_total" class="Sylius\RefundPlugin\Provider\OrderRefundedTotalProvider">
            <argument type="service" id="sylius_refund.repository.refund" />
            <argument type="service" id="sylius.repository.order_item_unit" />
        </service>
        <service id="Sylius\RefundPlugin\Provider\OrderRefundedTotalProviderInterface" alias="sylius_refund.provider.order_refunded_total" />
        <service id="Sylius\RefundPlugin\Provider\OrderRefundedTotalProvider" alias="Sylius\RefundPlugin\Provider\OrderRefundedTotalProviderInterface">
            <deprecated package="sylius/refund-plugin" version="1.0">The "%alias_id%" service alias is deprecated and will be removed in RefundPlugin 2.0, use Sylius\RefundPlugin\Provider\OrderRefundedTotalProviderInterface instead.</deprecated>
        </service>

        <service
            id="sylius_refund.provider.current_date_time_immutable"
            class="Sylius\RefundPlugin\Provider\CurrentDateTimeImmutableProvider"
        />
        <service id="Sylius\RefundPlugin\Provider\CurrentDateTimeImmutableProviderInterface" alias="sylius_refund.provider.current_date_time_immutable" />

        <service id="sylius_refund.provider.order_item_unit_total" class="Sylius\RefundPlugin\Provider\OrderItemUnitTotalProvider">
            <argument type="service" id="sylius.repository.order_item_unit" />
            <tag name="sylius_refund.refund_unit_total_provider" />
        </service>

        <service id="sylius_refund.provider.shipment_total" class="Sylius\RefundPlugin\Provider\ShipmentTotalProvider">
            <argument type="service" id="sylius.repository.adjustment" />
            <tag name="sylius_refund.refund_unit_total_provider" />
        </service>

        <service id="sylius_refund.provider.remaining_total" class="Sylius\RefundPlugin\Provider\RemainingTotalProvider">
            <argument type="tagged_locator" tag="sylius_refund.refund_unit_total_provider" index-by="refund_type" default-index-method="refundType" />
            <argument type="service" id="sylius_refund.repository.refund" />
        </service>
        <service id="Sylius\RefundPlugin\Provider\RemainingTotalProviderInterface" alias="sylius_refund.provider.remaining_total" />
        <service id="Sylius\RefundPlugin\Provider\RemainingTotalProvider" alias="Sylius\RefundPlugin\Provider\RemainingTotalProviderInterface">
            <deprecated package="sylius/refund-plugin" version="1.0">The "%alias_id%" service alias is deprecated and will be removed in RefundPlugin 2.0, use Sylius\RefundPlugin\Provider\RemainingTotalProviderInterface instead.</deprecated>
        </service>

        <service id="sylius_refund.provider.unit_refunded_total" class="Sylius\RefundPlugin\Provider\UnitRefundedTotalProvider">
            <argument type="service" id="sylius_refund.repository.refund" />
        </service>
        <service id="Sylius\RefundPlugin\Provider\UnitRefundedTotalProviderInterface" alias="sylius_refund.provider.unit_refunded_total" />
        <service id="Sylius\RefundPlugin\Provider\UnitRefundedTotalProvider" alias="Sylius\RefundPlugin\Provider\UnitRefundedTotalProviderInterface">
            <deprecated package="sylius/refund-plugin" version="1.0">The "%alias_id%" service alias is deprecated and will be removed in RefundPlugin 2.0, use Sylius\RefundPlugin\Provider\UnitRefundedTotalProviderInterface instead.</deprecated>
        </service>

        <service
            id="sylius_refund.provider.related_payment_id"
            class="Sylius\RefundPlugin\Provider\DefaultRelatedPaymentIdProvider"
        />
        <service id="Sylius\RefundPlugin\Provider\RelatedPaymentIdProviderInterface" alias="sylius_refund.provider.related_payment_id" />

        <service
            id="sylius_refund.provider.refund_payment_methods"
            class="Sylius\RefundPlugin\Provider\SupportedRefundPaymentMethodsProvider"
        >
            <argument type="service" id="sylius.repository.payment_method" />
            <argument>%sylius_refund.supported_gateways%</argument>
        </service>
        <service id="Sylius\RefundPlugin\Provider\RefundPaymentMethodsProviderInterface" alias="sylius_refund.provider.refund_payment_methods" />

        <service id="sylius_refund.provider.tax_rate" class="Sylius\RefundPlugin\Provider\TaxRateProvider"/>
        <service id="Sylius\RefundPlugin\Provider\TaxRateProviderInterface" alias="sylius_refund.provider.tax_rate" />
    </services>
</container>
