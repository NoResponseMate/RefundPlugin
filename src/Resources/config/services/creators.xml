<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="sylius_refund.creator.refund" class="Sylius\RefundPlugin\Creator\RefundCreator">
            <argument type="service" id="sylius_refund.factory.refund" />
            <argument type="service" id="sylius_refund.provider.remaining_total" />
            <argument type="service" id="sylius.repository.order" />
            <argument type="service" id="sylius_refund.manager.refund" />
        </service>
        <service id="Sylius\RefundPlugin\Creator\RefundCreatorInterface" alias="sylius_refund.creator.refund" />

        <service id="sylius_refund.creator.request_command" class="Sylius\RefundPlugin\Creator\RefundUnitsCommandCreator">
            <argument type="service" id="sylius_refund.converter.request_to_refund_units" />
        </service>
        <service id="Sylius\RefundPlugin\Creator\RequestCommandCreatorInterface" alias="sylius_refund.creator.request_command" />
    </services>
</container>
