<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="sylius_refund.listener.credit_memo_generated" class="Sylius\RefundPlugin\Listener\CreditMemoGeneratedEventListener" public="true">
            <argument type="service" id="sylius.command_bus" />
            <tag name="messenger.message_handler" bus="sylius.event_bus" />
        </service>

        <service id="sylius_refund.listener.unit_refunded" class="Sylius\RefundPlugin\Listener\UnitRefundedEventListener" public="true">
            <argument type="service" id="sylius_refund.state_resolver.order_partially_refunded" />
            <tag name="messenger.message_handler" bus="sylius.event_bus" />
        </service>

        <service
            id="sylius_refund.process_manager.units_refunded"
            class="Sylius\RefundPlugin\ProcessManager\UnitsRefundedProcessManager"
            public="true"
        >
            <argument type="tagged_iterator" tag="sylius_refund.units_refunded.process_step"/>
            <tag name="messenger.message_handler" bus="sylius.event_bus" />
        </service>
        <service id="Sylius\RefundPlugin\ProcessManager\UnitsRefundedProcessManagerInterface" alias="sylius_refund.process_manager.units_refunded" />

        <service id="sylius_refund.process_manager.refund_payment" class="Sylius\RefundPlugin\ProcessManager\RefundPaymentProcessManager">
            <argument type="service" id="sylius_refund.state_resolver.order_fully_refunded" />
            <argument type="service" id="sylius_refund.provider.related_payment_id" />
            <argument type="service" id="sylius_refund.factory.refund_payment" />
            <argument type="service" id="sylius.repository.order" />
            <argument type="service" id="sylius.repository.payment_method" />
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service" id="sylius.event_bus" />
            <tag name="sylius_refund.units_refunded.process_step" priority="50" />
        </service>

        <service id="sylius_refund.process_manager.credit_memo" class="Sylius\RefundPlugin\ProcessManager\CreditMemoProcessManager">
            <argument type="service" id="sylius.command_bus" />
            <tag name="sylius_refund.units_refunded.process_step" priority="100" />
        </service>
    </services>
</container>
