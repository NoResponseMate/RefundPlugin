<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <imports>
        <import resource="services/**/*.xml" />
    </imports>

    <parameters>
        <parameter key="sylius_refund.default_logo_file">@SyliusRefundPlugin/Resources/assets/sylius-logo.png</parameter>
        <parameter key="sylius_refund.template.logo_file">%env(default:sylius_refund.default_logo_file:resolve:SYLIUS_REFUND_LOGO_FILE)%</parameter>
    </parameters>

    <services>
        <defaults public="true" />

        <service id="sylius_refund.calculator.unit_refund_total" class="Sylius\RefundPlugin\Calculator\UnitRefundTotalCalculator">
            <argument type="service" id="sylius_refund.provider.remaining_total" />
        </service>
        <service id="Sylius\RefundPlugin\Calculator\UnitRefundTotalCalculatorInterface" alias="sylius_refund.calculator.unit_refund_total" />

        <service id="sylius_refund.refunder.order_item_units" class="Sylius\RefundPlugin\Refunder\OrderItemUnitsRefunder">
            <argument type="service" id="sylius_refund.creator.refund" />
            <argument type="service" id="sylius.event_bus" />
            <argument type="service" id="sylius_refund.filter.unit_refund" />
            <tag name="sylius_refund.refunder" />
        </service>

        <service id="sylius_refund.refunder.order_shipments" class="Sylius\RefundPlugin\Refunder\OrderShipmentsRefunder">
            <argument type="service" id="sylius_refund.creator.refund" />
            <argument type="service" id="sylius.event_bus" />
            <argument type="service" id="sylius_refund.filter.unit_refund" />
            <tag name="sylius_refund.refunder" />
        </service>

        <service id="sylius_refund.twig.extension.order_refunds" class="Sylius\RefundPlugin\Twig\OrderRefundsExtension">
            <argument type="service" id="sylius_refund.provider.order_refunded_total" />
            <argument type="service" id="Sylius\RefundPlugin\Provider\UnitRefundedTotalProviderInterface" />
            <argument type="service" id="sylius_refund.checker.unit_refunding_availability" />
            <argument type="service" id="sylius.repository.order" />
            <argument type="service" id="sylius_refund.repository.refund_payment" />
            <argument type="service" id="sylius_refund.factory.refund_type" />
            <tag name="twig.extension"/>
        </service>

        <service id="sylius_refund.repository.credit_memo_sequence" class="Doctrine\ORM\EntityRepository">
            <factory service="doctrine.orm.entity_manager" method="getRepository"/>
            <argument type="string">Sylius\RefundPlugin\Entity\CreditMemoSequence</argument>
        </service>

        <service id="sylius_refund.email_sender.credit_memo" class="Sylius\RefundPlugin\Sender\CreditMemoEmailSender">
            <argument type="service" id="sylius.email_sender" />
            <argument type="string">%sylius_refund.pdf_generator.enabled%</argument>
            <argument type="service" id="sylius_refund.resolver.credit_memo_file" />
            <argument type="service" id="sylius_refund.resolver.credit_memo_file_path" />
        </service>
        <service id="Sylius\RefundPlugin\Sender\CreditMemoEmailSenderInterface" alias="sylius_refund.email_sender.credit_memo" />

        <service id="sylius_refund.response_builder.credit_memo_file" class="Sylius\RefundPlugin\ResponseBuilder\CreditMemoFileResponseBuilder" />
        <service id="Sylius\RefundPlugin\ResponseBuilder\CreditMemoFileResponseBuilderInterface" alias="sylius_refund.response_builder.credit_memo_file" />

        <service id="sylius_refund.manager.credit_memo_file" class="Sylius\RefundPlugin\Manager\CreditMemoFileManager">
            <argument type="service" id="gaufrette.sylius_refund_credit_memo_filesystem" />
        </service>
        <service id="Sylius\RefundPlugin\Manager\CreditMemoFileManagerInterface" alias="sylius_refund.manager.credit_memo_file" />
    </services>
</container>
