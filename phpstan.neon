includes:
    - vendor/phpstan/phpstan-webmozart-assert/extension.neon

parameters:
    level: 8

    paths:
        - src

    excludePaths:
        # Makes PHPStan crash
        - 'src/DependencyInjection/Configuration.php'

        # Test dependencies
        - 'tests/Application/app/**.php'
        - 'tests/Application/src/**.php'

    ignoreErrors:
        - '/Call to an undefined method [a-zA-Z\\]+::createQueryBuilder\(\)./'
